    "express-validator": "^6.2.0",
    "helmet": "^3.21.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.6.13",
    "morgan": "^1.9.1",
    "pm2": "^3.5.1"
  },
  "devDependencies": {
